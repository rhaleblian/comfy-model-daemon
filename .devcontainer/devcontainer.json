{
  "name": "comfy-model-daemon-dev",
  "dockerFile": "Dockerfile",
  "context": "..",

  "runArgs": [
    "--init"
  ],

  "postCreateCommand": "pip install -r requirements.txt",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.isort"
      ]
    }
  },

  "remoteUser": "appuser",

  "mounts": [
    "source=${localWorkspaceFolder}/daemon,target=/app/daemon,type=bind"
  ]
}

